{
  "name": "social-payments-ua_back-end",
  "engines": {
    "node": "8.11.x"
  },
  "scripts": {
    "heroku-postbuild": "npm run build",
    "start": "npm run build -- --noEmitOnError && concurrently -k -p \"[{name}]\" -n \"ts,node\" -c \"cyan.bold,green.bold\" \"npm run start:ts\" \"npm run start:node\"",
    "start:node": "nodemon --inspect --watch dist --ext js --ignore dist/**/*.spec.js dist/bin/www.js",
    "start:ts": "tsc -w",
    "start:server": "node dist/bin/www.js",
    "test": "nodemon --ext ts --exec jasmine-ts \"src/**/*.spec.ts\"",
    "build": "rimraf dist && tsc",
    "db": "c:/tools/mongodb.portable/bin/mongod"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "debug": "~2.6.9",
    "exceljs": "^1.6.2",
    "express": "^4.16.2",
    "jws": "^3.1.5",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "mongoose": "^5.2.14",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/debug": "0.0.30",
    "@types/exceljs": "^0.5.2",
    "@types/express": "^4.16.0",
    "@types/jasmine": "^2.8.8",
    "@types/jws": "^3.1.1",
    "@types/lodash": "^4.14.116",
    "@types/mongoose": "^5.2.12",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.31",
    "@types/passport": "^0.4.6",
    "@types/passport-http-bearer": "^1.0.33",
    "concurrently": "^3.6.1",
    "jasmine-ts": "^0.2.1",
    "nodemon": "^1.18.4",
    "rimraf": "^2.6.2",
    "ts-node": "^6.2.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  }
}
