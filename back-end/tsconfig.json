{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "../api-contracts/**/*.d.ts"
  ],
  "exclude": [
    "api-contracts"
  ]
}